valid_choices=("rock", "paper", "scissors")

while True: 
    player1=input(" player 1 pls choose rock, scissors or paper")
    if player1 in valid_choices:
        break
else: 
    print("invalid choices: choose only rock, paper or scissors")

while True:
    player2=input("player 2 pls choose rock, scissors or paper")
    if player2 in valid_choices:
        break
else: 
    print("invalid choices: choose only rock, paper or scissors")
    
if player1 == player2: 
    print("its a tie!")
elif player1==("rock") and player2==("paper"):
    print("player2 wins!")
elif player1==("rock") and player2==("scissors"):
    print("player1 wins!")
elif player1==("paper") and player2==("rock"):
    print("player1 wins!") 
elif player1==("scissors") and player2==("rock"):
    print("player2 wins")


